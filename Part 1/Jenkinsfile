pipeline {
    agent any
    stages {
        stage ('GIT Checkout'){
            steps {
                git changelog: false, poll: false, url: 'https://github.com/ayushk1804/cyware-assignment.git'
            }
        }
        
        stage('build') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        
        stage ('Test'){
            steps {
                sh 'pytest test_app.py'
            }
        }
    }
}